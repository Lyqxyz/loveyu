.con-comment {
  margin: 20rpx;
  display: flex;
  box-sizing: border-box;
  flex-direction: column;
}

.comment-head {
  display: flex;
  justify-content: flex-start;
}

.comment-head image {
  height: 50rpx;
  width: 50rpx;
  border-radius: 50%;
}

.comment-head .name {
  margin-left: 20rpx;
  font-size: 30rpx;
  line-height: 50rpx;
  font-weight: bold;
}

.xin {
  line-height: 50rpx;
  margin-left: 20rpx;
}

.comment-head .grade {
  height: 20rpx;
  width: 20rpx;
}

.comment-detail {
  margin-top: 20rpx;
  background-color: #f3f5f7;
  text-indent: 2em;
  border-radius: 5rpx;
}

.comment-pv {
  margin-top: 15rpx;
